@model IEnumerable<SacramentMeetingApp.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.speakerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.speakerLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.speakerSubject)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.speakerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.speakerLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.speakerSubject)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.speakerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.speakerID">Details</a> |
